{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pookie-pomodoro",
  "version": "0.1.0",
  "identifier": "com.flami.pookie-pomodoro",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",       
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pookie Pomodoro",
        "width": 360,
        "height": 520,
        "minWidth": 320,
        "minHeight": 480,
        "decorations": false,
        "resizable": false,
        "alwaysOnTop": true,
        "visible": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}
